
<% if logged_in? %>
<%= link_to 'Log out', logout_path, method: :delete %>
<% end %>
<div class="row">
 	<div class="col-xs-10 col-xs-offset-1">
 		<% flash.each do |name,msg|%>
 		<div class='alert alert-<%= "#{name}"%>'>
 			<a href="#" class="close" data-dismiss='alert'>&#215;</a>
 			<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
 		</div>
 		<% end %>
 	</div>
 </div>

<div class="container">
	<div class="jumbotron">
		<div class="row">
			<div class="col-md-12 text-center">
				<h2> Aruna admin console Login</h2>
			</div>
		</div>
		<div class="row">
			<%= form_for(:session, :html => {class: "form-horizontal", role: "form"},url: admin_console_path) do |f| %>
				<div class="form-group">
					<div class="control-label col-sm-2">
						<%= f.label :email %>
					</div>
					<div class="col-sm-8">
						<%= f.email_field :email, class: "form-control", placeholder: "Enter email ", autofocus: true %>
					</div>
				</div>
				<div class="form-group">
					<div class="control-label col-sm-2">
						<%= f.label :password %>
					</div>
					<div class="col-sm-8">
						<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset col-sm-10 text-center">
						<%= f.submit "Login", class: "btn btn-danger btn-lg" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>