<div class="container">
	<div class="row">
		<div class="col-md-6">
			<a class="btn btn-default" href="/update/gallery/4">Back</a>
		</div>
		<div class="col-md-6 text-right">
			<% if logged_in? %>
				<%= link_to 'Log out', logout_path, method: :delete ,class: "btn btn-default"%>
			<% end %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<%= form_for @sub_categories, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
			<h3>Category</h3>
			<div class="col-md-12">
				<div class="form-group">
					<div  class="col-sm-2 control-label">
						<%= f.label :name %>
					</div>
					<div class="col-sm-10">
						<%= f.text_area :name, class:'form-control'%>
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<%= f.file_field :uploads, mutiple: true %>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-group">
					<% @sub_categories.uploads.each do |upload| %>
						<div class="col-md-3">
							<div class="col-md-12 text-center">
								<%= image_tag upload.variant(resize: "200x200")%>
							</div>
							<div class="col-md-12 text-center">
								<%= link_to 'delete',  update_gallery_category_delete_path(upload) ,method: :delete, data: { confirm: 'Are you sure?' } %>
							</div>
						</div>
					<% end %>
				</div>
			</div>
			<div class="col-md-6 hidden">
				<div class="form-group">
					<%= f.text_field :id, value: @sub_categories.id %>
				</div>
			</div>
			<div class="col-md-12 text-center" style="padding: 10px;">
				<%= f.submit "update",class:'btn btn-warning btn-lg'  %>
			</div>
		<% end %>
	</div>
</div>			

